  "version": "1.0.0",
  "workflow": {
    "trigger": "webhook",
    "endpoint": "/whatsapp-crisis",
    "nodes": [
      {
        "name": "Crisis Language Analysis",
        "type": "n8n-nodes-base.openAi",
        "parameters": {
          "model": "gpt-4",
          "messages": {
